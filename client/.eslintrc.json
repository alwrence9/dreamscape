{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prefer-const": "warn",
        "array-callback-return": "error",
        "eqeqeq": "warn",
        "no-const-assign": "error",
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "no-cond-assign": "error",
        "no-unreachable": "error"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
